<% include ../template/header %>
<style>
    .thongtin_user input {
        border: none;
        font-weight: bold;
    }

    .thongtin_user .form-group.row {
        border: 1px solid lightgrey;
        border-radius: 10px;
    }

    .edit_avatar {
        color: #007bff;
        font-size: 16px;
    }
</style>
<div class="container mt-3 mb-3 pl-0 pr-0" style="background-color: white; border-radius: 22px;">
    <div class="card" style="border-top-left-radius: 22px; border-top-right-radius: 22px;">
        <div class="card-header" style="border-top-left-radius: 22px; border-top-right-radius: 22px;">
            <div class="row align-items-center">
                <div class="col-12">
                    <h5 class="text-center" style="font-size:20px;">Quản lý tài khoản</h5>
                </div>
            </div>
        </div>
    </div>
    <form action="">
        <div class="row">
            <div class="col-xl-3 align-self-center  mt-3 mb-3" style="border-right: 1px solid lightgrey ">
                <div class="col-xl-12">
                    <img src="/img-users/yoona.png" alt="" width="100%" style="border-radius: 60%;">
                </div>
                <div class="col-xl-12">
                    <input type="text" class="form-control  text-center" value="rangover.qt"
                        style="font-size: 20px; font-weight: 600; border:none;">
                </div>
                <div class="col-xl-12">
                    <input type="text" class="form-control  text-center" value="Hạnh phúc là tất cả"
                        style="font-size: 15px; border:none; font-style:italic">
                </div>
            </div>
            <div class="col-xl-7 offset-1 mt-3 mb-3 thongtin_user">
                <div class="form-group row">
                    <label for="inputPassword" class="col-sm-3 col-form-label">Tên đăng nhập</label>
                    <div class="col-sm-9 pr-1">
                        <input type="text" class="form-control" id="inputPassword" value="rangover.qt">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputPassword" class="col-sm-3 col-form-label">Mật khẩu</label>
                    <div class="col-sm-9 pr-0">
                        <div class="input-group">
                            <input type="password" class="form-control" value="12345">
                            <div class="input-group-prepend"  style="cursor: pointer;">
                                <div class="input-group-text" style="border-top-right-radius: 10px;border-bottom-right-radius: 10px;">
                                    <i class="fas fa-eye"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputPassword" class="col-sm-3 col-form-label">Họ và tên</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" id="inputPassword" value="Nguyễn Hồng Nhung">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputPassword" class="col-sm-3 col-form-label">Ngày sinh</label>
                    <div class="col-sm-9">
                        <input type="date" class="form-control" id="inputPassword" value="1992-05-22">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputPassword" class="col-sm-3 col-form-label">Giới tính</label>
                    <div class="col-sm-9 pt-2 pl-4" style="font-weight: bold; color:#495057">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="gt" value="option1">
                            <label class="form-check-label" for="inlineRadio1">Nam</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="gt" value="option2" checked>
                            <label class="form-check-label" for="inlineRadio2">Nữ</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="gt" value="option3">
                            <label class="form-check-label" for="inlineRadio3">Khác</label>
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputPassword" class="col-sm-3 col-form-label">Địa chỉ</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" id="inputPassword"
                            value="14, Nguyễn Văn Cừ nối dài, Q. Ninh Kiều, TP.Cần Thơ">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputPassword" class="col-sm-3 col-form-label">Số điện thoại</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" id="inputPassword" value="0987654321">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputPassword" class="col-sm-3 col-form-label  align-self-center">Ảnh nền</label>
                    <div class="col-sm-9 pr-0">
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" id="customFile" name="anh">
                            <label class="custom-file-label" for="customFile" required style="border-top-right-radius: 9px;border-bottom-right-radius: 9px;">Upload ảnh</label>
                        </div>
                        <img src="/img/background_user.png" class="img-fluid" alt="">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputPassword" class="col-sm-3 col-form-label">Trang thái</label>
                    <div class="col-sm-9 pt-2" style="font-weight: bold; color:#495057">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" value="option1" disabled>
                            <label class="form-check-label" for="inlineRadio1">Bị chặn</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" value="option2" disabled>
                            <label class="form-check-label" for="inlineRadio2">Đề cử</label>
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputPassword" class="col-sm-3 col-form-label">Chức vụ</label>
                    <div class="col-sm-9" style="font-weight: bold; color:#495057">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="option1"
                                disabled >
                            <label class="form-check-label" for="inlineCheckbox1">Người dùng bình thường</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="inlineCheckbox2" value="option2"
                                disabled>
                            <label class="form-check-label" for="inlineCheckbox2">Kiểm duyệt viên</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="inlineCheckbox3" value="option3"
                                disabled checked>
                            <label class="form-check-label" for="inlineCheckbox3">Chuyên viên viết bài</label>
                        </div>
                        <div class="form-check form-check-inline" style="margin-left: 38px;">
                            <input class="form-check-input" type="checkbox" id="inlineCheckbox3" value="option3"
                                disabled>
                            <label class="form-check-label" for="inlineCheckbox3">Quản trị viên</label>
                        </div>
                    </div>
                </div>
                <button class="btn btn-primary float-right">Cập nhật thông tin</button>
            </div>
        </div>

    </form>
</div>
<% include ../template/footer %>